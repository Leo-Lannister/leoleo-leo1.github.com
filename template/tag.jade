extends base
{% from "mixins" import make_posts_list %}
is_index = request.path.strip('/')=='tag'

block title
	| {{ "Tags" if is_index else posts.tags[0] }} | {{ site.title }}

block content
	if is_index
		ul.list_with_title
			for tag_name, tag_count in site.tags
				li.listing_title
					a(href="/tag/{{tag_name}}")= tag_name
					| ({{tag_count}})

	else
		#posts
			+make_posts_list()